<?xml version="1.0"?>
<!-- $Id$ -->
<!--
  MD500 multiplayer passenger view.
-->
<!--
  Usage: fgfs - -prop:/sim/remote/pilot-callsign="remote pilot callsign" - -aircraft=Fi-156-passenger
-->
<PropertyList>

 <sim>
 <multiplay n="0">
      <chat_display>1</chat_display>
      <generic n="0">
	

      <int n="1" alias="/instrumentation/radar/range"/>
      <float n="3" type="double" alias="/orientation/alpha-deg"/>
      <string n="3" alias="/controls/AI/rdrcallsign"/>
      </generic>
    </multiplay>				


  <description>FA-18D Back Seat(YASIM)</description>
  <author>Mathias Froehlich, Algernon</author>
  <status>vAlpha 0.9</status>
  <aircraft-version>$Id$</aircraft-version>
  
  <flight-model>null</flight-model>

  <presets>
   <onground type="bool">false</onground>
   <altitude-agl-ft type="double">30.0</altitude-agl-ft>
  </presets>
  <variant-of>F-18C_Hornet</variant-of>
  <!-- 3d model -->
  <model>
   <path>/Models/D/F-18D-BackSeat.xml</path>
  </model>

  <!-- Views -->
  <view n="0">
   <!-- Passenger's position. -->
   <name>Copilot View</name>
   <type>lookfrom</type>
   <internal type="bool">true</internal>
   <config>
    <internal type="bool">true</internal>
    <from-model type="bool">false</from-model>
    <from-model-idx type="int">0</from-model-idx>
    <eye-lat-deg-path>/position/latitude-deg</eye-lat-deg-path>
    <eye-lon-deg-path>/position/longitude-deg</eye-lon-deg-path>
    <eye-alt-ft-path>/position/altitude-ft</eye-alt-ft-path>
    <eye-heading-deg-path>/orientation/heading-deg</eye-heading-deg-path>
    <eye-pitch-deg-path>/orientation/pitch-deg</eye-pitch-deg-path>
    <eye-roll-deg-path>/orientation/roll-deg</eye-roll-deg-path>

    <!-- x/y/z == right/up/back -->
   	 <x-offset-m archive="y">0</x-offset-m> 
     <y-offset-m archive="y">1.45</y-offset-m>  
     <z-offset-m archive="y">-2.4</z-offset-m>  
    <pitch-offset-deg>0</pitch-offset-deg>
    <default-field-of-view-deg type="double">90.0</default-field-of-view-deg>
   </config>
  </view>

 
  <chase-distance-m type="double">-18.0</chase-distance-m>

  <sound>
   <path>Aircraft/F-18D/Sounds/sound.xml</path>
  </sound>
		

		

  <!-- Aircraft specific help. -->
  <!-- help include="help.xml"/ -->

  <!-- systems>
   <electrical>
    <path/>
   </electrical>
  </systems>
  <instrumentation>
   <path/>
  </instrumentation -->

  <menubar>
   <default>
    <menu n="100">
     <label>FA-18D</label>
     <item>
      <label>Select Pilot</label>
      <binding>
       <command>nasal</command>
       <script>
        dual_control_tools.
          copilot_dialog.show(aircraft_dual_control.pilot_type);
       </script>
      </binding>
     </item>
    </menu>
   </default>
  </menubar>

 </sim>
 
 <instrumentation>

<rwr>
      <display-lighting-intens type="double">0.4</display-lighting-intens>
      <symbology-lighting-intens type="double">1</symbology-lighting-intens>
    </rwr>

    <enav><selected type="int">3</selected></enav>

<radar>

  <range type="int" archive="y">40</range>
  <range-factor type="double" archive="n">0.001888</range-factor>
  <minimized type="bool" archive="y">false</minimized>
  <selected type="int">2</selected>
  <lock type="int">0</lock>
  <lock2 type="int">0</lock2>
  <threat-spotted type="int">0</threat-spotted> <!--for lockhelper.nas-->
